<!DOCTYPE html>
<html lang="EUC-KR">
<head>
  <title>삼아인쇄기획 홈페이지</title>
  <meta charset="EUC-KR">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>
<body>
<%- include ../header.ejs %>

<div class="container-fluid text-center">
  <div class="row content">
    <div class="col-sm-12 text-left"  >
      <h1>부과내역서인쇄의뢰</h1>
      <div>
        <form id="writeform" action="/bbs/main/doupdate" method="post" enctype="multipart/form-data">
          <input type="hidden"  name="bbsno"  value=<%=rs[0].bbsno%>>
          <input type="hidden"  name="wname"  value=<%=rs[0].wname%>>
          <input type="hidden"  name="type"   value=<%=rs[0].type%>>
          <input type="hidden"  name="status" value=<%=rs[0].status%>>
          <div class="form-group">
            <label for="subject">제목 :</label>
            <input type="text" class="form-control" name="subject" placeholder="제목" value=<%=rs[0].subject%>/>
          </div>
          <div class="form-group">
            <label for="passwd">비밀번호:</label>
            <input type="password" class="form-control" name="passwd" placeholder="비밀번호"/>
          </div>
          <div class="form-group">
            <label for="content">내용:</label>
            <textarea class="form-control" rows="5"  name="content"><%=rs[0].content%></textarea>
          </div>
          <div>
            <label for="content">첨부된 파일:</label></br>
            <%
            rsfile.forEach(function(item, index){
            %>
              <a href="/filedownload/<%=item.file_name_rel%>"><%=item.file_name_ori%></a>
              <a href="/deletefile/<%=item.file_name_rel%>/<%=rs[0].bbsno%>">&nbsp;<span class="badge">x</span></a></br>
            <%
            });
            %>
          </div>
          <input type="file" name="attachfile"  multiple >
          <button type="submit" class="btn btn-default  pull-right">수정</button>
        </form>
      </div>
    </div>
  </div>
</div>

<footer class="container-fluid text-center">
  <p>Footer Text</p>
</footer>

<script>
  $("#btnupdate").submit(function(){
    $('<input />').attr('type', 'hidden')
        .attr('name', "wname")
        .attr('id', "wname")
        .attr('value',"aaaaaaa")
        .appendTo('#updateform');
    return true;
  });
</script>

</body>
</html>
